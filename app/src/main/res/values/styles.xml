<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/text</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/toolbar_fill</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DropDownMenuTop" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DropDownMenuButton" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_height">@dimen/button_tool</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme." parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_fill</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:titleTextColor">@color/background</item>
    </style>
    
    <style name="bottom_tag" >
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="bottom" >
        <item name="android:background">@android:color/white</item>
    </style>

</resources>