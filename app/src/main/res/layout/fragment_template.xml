<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentTemplate">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/tool_lmargin"
        android:layout_marginBottom="@dimen/tool_xlmargin"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        >

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_smargin"
        android:fontFamily="@font/raleway"
        android:text="@string/title"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_smargin"
        android:fontFamily="@font/raleway"
        android:text="Sign In"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/fragment_slash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_smargin"
        android:fontFamily="@font/raleway"
        android:text="|"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/fragment_login"
        app:layout_constraintEnd_toStartOf="@id/fragment_register"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:layout_margin="@dimen/tool_smargin"
        android:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_smargin"
        android:fontFamily="@font/raleway"
        android:text="Sign Up"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_slash"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_mmargin"
        android:fontFamily="@font/raleway"
        android:text="@string/title"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_mmargin"
        android:fontFamily="@font/raleway"
        android:text="@string/skip"
        android:textSize="16sp"
        android:textColor="@color/skip"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/tool_smargin"
        android:layout_marginBottom="@dimen/tool_smargin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>


</androidx.constraintlayout.widget.ConstraintLayout>